<h1>{{title}}</h1>




<div class="form-ctn">
<h2>Ingreso de Productos</h2>
    <form action="webchat/productos" method="POST">

        <label for="name">Nombre:</label>
        <input type="text" id="title" name="title" placeholder="title" />


        <label for="mail">Precio:</label>
        <input type="number" min="0" id="price" name="price" placeholder="Price" />

        <label for="msg">Foto Url:</label>
        <input type="url" id="thumbnail" name="thumbnail" placeholder="thumbnail" />
        <input class="input-btn" type="submit" value="enviar" />
    </form>
     {{> productosViewsHbs }}
</div>



<div class="form-ctn" >
<h2>Centro de Mensajes</h2>

    <form onsubmit="return addNewMessages(this)" >

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="ingrese su email" />
        
        <div ><ul id="chat"></ul></div>

        <label for="mensaje">Mensaje:</label>
        <input type="text" id="mensaje" name="mensaje" placeholder="ingrese su mensaje" />
        <input class="input-btn" type="submit" value="enviar" />

    </form>

</div>
