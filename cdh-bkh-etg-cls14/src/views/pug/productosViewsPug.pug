doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/public/css/style.css")
        title Document
    body    
        h1=title 
        div(class='container')   
                
            if listExits               
                div(class='card-productos')
                    div(class="card")
                        div(class="card-header")="Nombre"
                        div(class='card-header')="Precio"
                        div(class="card-header")="Foto"
                    each val in msg
                        div(class="card ")
                            div(class="card-title")
                                h3=val.title
                            div(class="card-price")
                                p=val.price
                            div(class="card-img")
                                img(src=val.thumbnail alt=valtitle)    
        
            else
                 div(class="no-product")="No hay productos"
        div(class="produtos-btn")  
            a(href="/indexPug.html" class="form-btn")="volver formulario PUG"